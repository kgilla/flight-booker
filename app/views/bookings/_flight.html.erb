
<div class="flight-details">
  <header class="details-header">
    <h5><%= @flight.from_airport.name %> to <%= @flight.to_airport.name %>
    (<%= @flight.from_airport.airport_code %>
      <i class="fas fa-arrow-right"></i> 
      <%= @flight.to_airport.airport_code %>)
    </h5>
  </header>
  <main class="details-main">
    <div class="flight-card-detail"> 
      <p><%= @flight.date.strftime("%d/%m/%Y - %I:%M %p") %></p>     
      <label class="flight-card-label">Date/Time</label>
    </div>
    <div class="flight-card-detail">  
      <p><%= @flight.airline %></p>    
      <label class="flight-card-label">Airline</label>
    </div>
    <div class="flight-card-detail"> 
      <p><%= @flight.layovers %></p>     
      <label class="flight-card-label">Layovers</label>
    </div>
    <div class="flight-card-detail">  
      <p><%= @flight.duration %> Hours</p>    
      <label class="flight-card-label">Duration</label>
    </div>
    <div class="flight-card-detail">  
      <p>$<%= @flight.price %></p>    
      <label class="flight-card-label">Price</label>
    </div>
  </main>
</div>


