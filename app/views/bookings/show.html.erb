<div class="container mt-5">
<h3>Thanks For Booking With Us!</h3>
<h5 class="mt-3">Flight Details</h5>
<%= render 'bookings/flight'%>
<% @passengers.each_with_index do |p, i| %>
<h5>Passenger #<%= i+1 %></h5>
<div class="card-body">
  <h5 class="card-title">Name: <%= p.name %></h5>
  <h5 class="card-title">Email: <%= p.email %></h5>
</div>
<%end%>

</div>

