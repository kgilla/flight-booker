<%= form_for @booking, html: {id: "passenger-forms", class: "mt-3"} do |f| %>
  <% passenger_count = 1 %>
  <%= f.fields_for :passengers do |p| %>
    <div class="passenger-form">
      <div class="passenger-container">
        <header class="passenger-header">
          <h6>Passenger # <%=passenger_count%></h6>
        </header>
        <main class="passenger-main">
          <div class="form-group mb-3">
            <label for="name">Name</label>
            <%= p.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <label for="email">Email</label>
            <%= p.text_field :email, class: "form-control" %>
          </div>
        </main>
      </div>
    </div>
    <%passenger_count += 1%>    
  <% end %>
  <%= f.hidden_field(:flight_id, value: @flight.id) %>
  <%= f.submit class: "btn btn-primary btn-lg btn-block passenger-button" %>
<% end %>

